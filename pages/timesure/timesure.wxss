/* pages/timesure/timesure.wxss */
.body{
  width: 100%;
}
.cocontant-top{
  width: 90%;
  background-color: #f5f6f8;
  height: 350rpx;
  margin:130rpx auto 60rpx auto;
  border-radius: 15rpx;
  position: relative;
}
.cocontant-logo{
  width: 232rpx;
  height: 165rpx;
  position: absolute;
  top: -95rpx;
  left: 50%;
  margin-left: -116rpx;
}
.cocontant-logo image{
  width: 100%;
  height: 100%;
}
.cocontant-bottom{
  width: 100%;
  padding-top: 70rpx;
  text-align: center;
}
.timeselect{
  padding-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.title{
  font-size: 36rpx;
  letter-spacing: 5rpx;
  font-weight: bold;
}
.timepicker{
  width:100rpx;   
  height: 50px;
  font-size: 50rpx;
}
.timehour{
  margin-left: 20rpx;
  height: 50px;
  font-size: 48rpx;
  color: #ffd640;
  line-height: 50px;
}
.tips{
  margin-top: 37rpx;
  color: #747373;
  font-size: 25rpx;
  letter-spacing: 3rpx;
}
.cocontant-sure-number,.cocontant-sure-data{
  letter-spacing: 3rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  color: #747373;
  font-size: 32 rpx;
  width: 100%;
  border-top: 1rpx solid #e0dfdf;
  border-bottom: 1rpx solid #e0dfdf;
}
.cocontant-sure-data{
  border-top: 0rpx;
}
.cocontant-sure-left{
  margin-left: 50rpx;
}
.cocontant-sure-right{
  margin-right: 30rpx;
}
.button-sure{
  margin: 170rpx auto;
  width: 60%;
  height: 92rpx;
  background-color: #ffd742;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;  
  font-size:45rpx;
  color: #fff;
  letter-spacing: 10rpx;
}
.button-sure-text{
  margin-left: 20rpx;
  margin-top: -5rpx;
}